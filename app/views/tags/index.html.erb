<h1>Listing tags</h1>

<% if user_signed_in? %>
  <p><%= link_to 'New Tag', new_tag_path %></p>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.name %></td>
      <td><%= tag.tag_type.capitalize %></td>
      <td><%= link_to 'View', tag_path(tag) %></td>
      <td>
        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_tag_path(tag) %>
        <% end %>
      </td>
      <td>
        <% if user_signed_in? %>
          <%= link_to 'Delete', tag, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<script>

  $(function(){
    $('.table').dataTable({
      "sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>",
      "sPaginationType": "bootstrap"
    });
  });

</script>

